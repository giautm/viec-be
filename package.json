{
  "name": "viec-be",
  "version": "0.1.0",
  "main": "index.js",
  "author": "Giau TM <giau.tmg@gmail.com>",
  "license": "MIT",
  "scripts": {
    "start": "node build/index.js",
    "build": "yarn clear && babel src --ignore *.spec.js --out-dir build --copy-files",
    "clear": "rimraf ./build",
    "flow": "flow; test $? -eq 0 -o $? -eq 2",
    "lint": "eslint src/**",
    "repl": "nodemon --config ./repl/nodemon.json ./repl.js --exec babel-node",
    "test": "jest --coverage --forceExit --runInBand",
    "test:watch": "jest --watch --coverage",
    "update-schema": "babel-node ./scripts/updateSchema.js",
    "watch": "nodemon src/index.js --exec babel-node"
  },
  "dependencies": {
    "babel-polyfill": "6.23.0",
    "dataloader": "1.3.0",
    "graphql": "0.9.3",
    "graphql-server-koa": "0.7.2",
    "koa": "2.2.0",
    "koa-bodyparser": "3.2.0",
    "koa-cors": "0.0.16",
    "koa-router": "7.1.1",
    "mongoose": "4.9.6",
    "winston": "2.3.1"
  },
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-preset-env": "1.4.0",
    "jest": "19.0.2",
    "jest-cli": "19.0.2",
    "nodemon": "1.11.0",
    "rimraf": "2.6.1"
  },
  "engines": {
    "node": ">=7.6",
    "yarn": ">=0.21"
  },
  "jest": {
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/",
      "./build"
    ],
    "coverageReporters": [
      "lcov",
      "html"
    ],
    "coverageDirectory": "./coverage/",
    "collectCoverage": true,
    "moduleNameMapper": {
      "^mongoose$": "<rootDir>/node_modules/mongoose"
    }
  }
}
